// 1. Configuração do Cliente
generator client {
  provider = "prisma-client-js"
}

// 2. Configuração do Banco de Dados (Já vem certo)
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // O banco será um arquivo 'dev.db'
}

// 3. Suas Tabelas (Models)
model Pet {
  id           Int           @id @default(autoincrement())
  nome         String
  raca         String?
  dono         String
  agendamentos Agendamento[]
}

model Servico {
  id           Int           @id @default(autoincrement())
  nome         String        @unique
  preco        Float
  agendamentos Agendamento[]
}

model Agendamento {
  id       Int      @id @default(autoincrement())
  dataHora DateTime
  status   String   @default("Agendado")

  petId     Int
  servicoId Int
  pet       Pet     @relation(fields: [petId], references: [id])
  servico   Servico @relation(fields: [servicoId], references: [id])
}
